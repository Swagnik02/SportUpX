<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:paddingTop="5dp"
        android:paddingBottom="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        android:paddingTop="1dp"
        android:paddingBottom="1dp">

    <!-- TextView for Batsman Name -->
    <TextView
        android:id="@+id/im_batsman_name"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Batsman"
        android:textColor="@color/black" />

    <!-- Divider -->
    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/im_batsman_name"
        android:background="?android:attr/listDivider" />

    <!-- TextView for Runs -->
    <TextView
        android:id="@+id/im_batsman_runs"
        android:gravity="center"
        android:layout_width="40.3dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/divider1"
        android:text="R"
        android:textAllCaps="true"
        android:textColor="@color/black" />

    <!-- Divider -->
    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/im_batsman_runs"
        android:background="?android:attr/listDivider"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <!-- TextView for Balls Played -->
    <TextView
        android:id="@+id/im_batsman_balls_played"
        android:gravity="center"
        android:layout_width="30.4dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/divider2"
        android:text="B"
        android:textAllCaps="true"
        android:textColor="@color/black" />

    <!-- Divider -->
    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/im_batsman_balls_played"
        android:background="?android:attr/listDivider"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <!-- TextView for Fours -->
    <TextView
        android:id="@+id/im_batsman_fours"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/divider3"
        android:gravity="center"
        android:text="4s"
        android:textAllCaps="true"
        android:textColor="@color/black" />

    <!-- Divider -->
    <View
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/im_batsman_fours"
        android:background="?android:attr/listDivider"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <!-- TextView for Sixes -->
    <TextView
        android:id="@+id/im_batsman_sixes"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/divider4"
        android:gravity="center"
        android:text="6s"
        android:textAllCaps="true"
        android:textColor="@color/black" />

    <!-- Divider -->
    <View
        android:id="@+id/divider5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/im_batsman_sixes"
        android:background="?android:attr/listDivider"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <!-- TextView for Strike Rate -->
    <TextView
        android:id="@+id/im_batsman_StrikeRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/divider5"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="S/R"
        android:textAllCaps="true"
        android:textColor="@color/black" />


    </LinearLayout>
    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="?android:attr/listDivider" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
