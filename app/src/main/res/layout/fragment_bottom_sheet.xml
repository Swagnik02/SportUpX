<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/transparent"
    android:id="@+id/bottomSheetLayout"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <!-- The background overlay to dim the underlying content -->
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="@android:color/black"/>

    <!-- The bottom sheet content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:orientation="vertical">

        <!-- Image display field -->

        <!-- Username text field -->

        <EditText
            android:id="@+id/usernameTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:padding="16dp" />

        <!-- Wallet balance text field -->
        <EditText
            android:id="@+id/walletBalanceTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Wallet Balance"
            android:padding="16dp" />

        <!-- Add any other views or buttons you need here -->

    </LinearLayout>

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:baselineAligned="false"
        android:padding="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user"
        app:layout_anchor="@+id/frameLayout"
        app:layout_anchorGravity="bottom|center" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
