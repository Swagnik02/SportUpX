<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/im_com_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardCornerRadius="16dp">

            <TextView
                android:id="@+id/im_inning"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/green"
                android:gravity="bottom|center"
                android:paddingBottom="5dp"
                android:text="Innings"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:visibility="gone" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/im_com_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="16dp">

            <LinearLayout
                android:id="@+id/im_com_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/im_overs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="43.4" />

                <TextView
                    android:id="@+id/im_runs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_score_4_6"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/white" />
            </LinearLayout>

            <TextView
                android:id="@+id/im_com_resp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_5dp"
                android:text="M. Pathirana to N. Ahmed, SIX!" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>