<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_marginLeft="10dp"
        tools:ignore="MissingConstraints">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_marginLeft="10dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/team2extras"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Extras"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <View
            android:id="@+id/divider3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/team2extras"
            android:background="?android:attr/listDivider" />

        <!-- TextView for total_score -->
        <TextView
            android:id="@+id/im_team2_total_extras"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_toRightOf="@id/divider3"
            android:text="score"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <!-- TextView for wickets -->
        <TextView
            android:id="@+id/im_team2_extra_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/divider2"
            android:gravity="center"
            android:text="(wd p,lb q,nb r,B s)"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </LinearLayout>
    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="?android:attr/listDivider" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_marginLeft="10dp"
        tools:ignore="MissingConstraints">

        <!-- Total Score Label -->
        <TextView
            android:id="@+id/team2score"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Total Score"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <!-- Divider -->
        <View
            android:id="@+id/divider1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/team2score"
            android:background="?android:attr/listDivider" />

        <!-- TextView for total_score -->
        <TextView
            android:id="@+id/im_team2_total_score"
            android:gravity="right"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_toRightOf="@id/divider1"
            android:text="score"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <!-- Divider -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/im_team2_total_score"
            android:gravity="center"
            android:text="/"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <!-- TextView for wickets -->
        <TextView
            android:id="@+id/im_team2_wickets"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/divider2"
            android:gravity="left|center"
            android:text="w"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp" />


        <!-- TextView for overs -->
        <TextView
            android:id="@+id/im_team2_overs"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/im_team2_wickets"
            android:gravity="center"
            android:text="overs"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>