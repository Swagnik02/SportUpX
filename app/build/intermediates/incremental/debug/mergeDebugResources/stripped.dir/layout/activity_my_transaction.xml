<?xml version="1.0" encoding="utf-8"?>
                                                                   
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:tag="layout/activity_my_transaction_0" xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        layout="@layout/activity_mainheader"
        android:id="@+id/head"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_below="@id/head"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RV_MyTransactions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Transactions Available"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:textColor="@color/white"
        android:id="@+id/tv_NoDataAvailable"/>
</RelativeLayout>
         